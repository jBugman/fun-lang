name:                fun-parser
version:             0.8.0.0-SNAPSHOT
-- synopsis:
-- description:
homepage:            https://github.com/jBugman/fun-lang#readme
license:             MIT
author:              Sergey Parshukov
maintainer:          codedby@bugman.me
copyright:           2017 Sergey Parshukov
category:            Language
build-type:          Simple
cabal-version:       >=1.10

library
  hs-source-dirs:      src
  exposed-modules:     Fun.Parser
                     , Fun.Lexer
                 --  , Fun.Types
                     , Fun.Sexp
                     , Fun.GoPrinter
                 --  , Fun.Main
  ghc-options:         -Wall -Wno-partial-type-signatures
  default-extensions:  OverloadedStrings
  build-depends:       base >= 4.7 && < 5
                     , megaparsec >= 5.2 && < 5.4
                     , aeson >= 1.0.2.1 && < 1.3
                     , containers >= 0.5.7.1 && < 0.6
                     , split >= 0.2.3.2 && < 0.3
                     , text >= 1.2.2.1 && < 1.3
                     , text-format >= 0.3.1.1 && < 0.4
  default-language:    Haskell2010

