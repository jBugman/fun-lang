test-suite fun-lang-test
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             Spec.hs
  build-depends:       base
                     , fun-parser
                     , hspec >= 2.4.3 && < 2.5
                     , hspec-megaparsec >= 0.3.1 && < 0.4
  ghc-options:         -Wall -threaded -rtsopts
  default-language:    Haskell2010

source-repository head
  type:     git
  location: https://github.com/jBugman/fun-lang
